{%- set hosts=pillar['cons3rt-infrastructure']['hosts'] -%}
{%- set guacamole=salt['pillar.get']('cons3rt:guacamole_installed_with_ui','false') -%}
*filter
:INPUT DROP [0:0]
:FORWARD DROP [0:0]
:OUTPUT ACCEPT [0:0]
-A INPUT -p tcp ! --syn -m state --state NEW -j DROP
-A INPUT -f -j DROP
-A INPUT -p tcp --tcp-flags ALL ALL -j DROP
-A INPUT -p tcp --tcp-flags ALL NONE -j DROP
-A INPUT -m state --state ESTABLISHED,RELATED -j ACCEPT
-A INPUT -p icmp -j ACCEPT
-A INPUT -i lo -j ACCEPT
-A INPUT -m state --state NEW -m tcp -p tcp --dport 22 -j ACCEPT
{%- if grains['id'] == hosts.infrastructure.hostname and lower(salt['pillar.get']('cons3rt-infrastructure:infrastructure_type','aws')) == 'aws' %}
-A INPUT -m state --state NEW -m tcp -p tcp --dport 4505 -j ACCEPT
-A INPUT -m state --state NEW -m tcp -p tcp --dport 4506 -j ACCEPT{% endif %}
{%- if grains['id'] == hosts.cons3rt.hostname %}
-A INPUT -m state --state NEW -m tcp -p tcp --dport 137 -j ACCEPT
-A INPUT -m state --state NEW -m tcp -p tcp --dport 138 -j ACCEPT
-A INPUT -m state --state NEW -m tcp -p tcp --dport 139 -j ACCEPT
-A INPUT -m state --state NEW -m tcp -p tcp --dport 111 -j ACCEPT
-A INPUT -m state --state NEW -m udp -p udp --dport 111 -j ACCEPT
-A INPUT -m state --state NEW -m tcp -p tcp --dport 662 -j ACCEPT
-A INPUT -m state --state NEW -m udp -p udp --dport 662 -j ACCEPT
-A INPUT -m state --state NEW -m tcp -p tcp --dport 875 -j ACCEPT
-A INPUT -m state --state NEW -m udp -p udp --dport 875 -j ACCEPT
-A INPUT -m state --state NEW -m tcp -p tcp --dport 892 -j ACCEPT
-A INPUT -m state --state NEW -m udp -p udp --dport 892 -j ACCEPT
-A INPUT -m state --state NEW -m tcp -p tcp --dport 2049 -j ACCEPT
-A INPUT -m state --state NEW -m udp -p udp --dport 2049 -j ACCEPT
-A INPUT -m state --state NEW -m udp -p udp --dport 32769 -j ACCEPT
-A INPUT -m state --state NEW -m tcp -p tcp --dport 32803 -j ACCEPT{% endif %}
{%- if grains['id'] == hosts.messaging.hostname %}
-A INPUT -m state --state NEW -m tcp -p tcp --dport {{salt['pillar.get']('cons3rt:qpid_messaging_port', '4443')}} -j ACCEPT{% endif %}
{%- if grains['id'] == hosts.database.hostname %}
-A INPUT -m state --state NEW -m tcp -p tcp --dport {{salt['pillar.get']('cons3rt:mysql_communication_port','3306')}} -j ACCEPT{% endif %}
{%- if grains['id'] == hosts.assetrepository.hostname %}
-A INPUT -m state --state NEW -m tcp -p tcp --dport 3443 -j ACCEPT
-A INPUT -m state --state NEW -m tcp -p tcp --dport 8443 -j ACCEPT{% endif %}
{%- if grains['id'] == hosts.webinterface.hostname %}
-A INPUT -m state --state NEW -m tcp -p tcp --dport 443 -j ACCEPT
{%- if lower(guacamole) == 'true' %}
-A INPUT -m state --state NEW -m tcp -p tcp --dport 4822 -j ACCEPT{% endif %}
{%- endif %}
-A FORWARD -j REJECT --reject-with icmp-host-prohibited
COMMIT

