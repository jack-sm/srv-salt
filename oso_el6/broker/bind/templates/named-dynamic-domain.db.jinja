{% set oso_domain=salt['pillar.get']('oso_el6:network:domain') %}
$ORIGIN .
$TTL 1 ; 1 seconds (for testing only)
{{oso_domain}}       IN SOA  ns1.{{oso_domain}}. hostmaster.{{oso_domain}}. (
            2011112904 ; serial
            60         ; refresh (1 minute)
            15         ; retry (15 seconds)
            1800       ; expire (30 minutes)
            10         ; minimum (10 seconds)
            )
        NS  ns1.{{oso_domain}}.
        MX  10 mail.{{oso_domain}}.
$ORIGIN {{oso_domain}}.
ns1         A   127.0.0.1

